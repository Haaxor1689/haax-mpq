{
  "name": "haax-mpq",
  "version": "1.0.0",
  "author": "Haaxor1689",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Haaxor1689/haax-mpq.git"
  },
  "main": "./dist/index.js",
  "bin": "./dist/index.js",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "dev": "ts-node ./src/index.ts",
    "build": "tsc",
    "bundle": "npm run build && pkg ."
  },
  "devDependencies": {
    "@types/node": "^20.8.5",
    "pkg": "^5.8.1",
    "ts-node": "^10.9.1",
    "typescript": "5.2.2"
  },
  "dependencies": {
    "anymatch": "^3.1.3",
    "stormlib-node": "^1.3.0"
  },
  "pkg": {
    "scripts": [
      "dist/*.js"
    ],
    "assets": [
      "./node_modules/stormlib-node/dist/stormlib.node",
      "./node_modules/stormlib-node/dist/StormLib.dll"
    ],
    "targets": [
      "win"
    ]
  }
}
